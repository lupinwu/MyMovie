swiper {
  width: 100%;
  height: 600rpx;
}

.slide-image {
  width: 100%;
  height: 600rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author {
  height: 60rpx;
  width: 60rpx;
}

.post-date {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-fav {
  display: flex;
  font-size: 26rpx;
  margin-left: 20rpx;
  align-items: center;
}

.post-fav-icon {
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.post-fav-digit {
  margin-right: 40rpx;
}

